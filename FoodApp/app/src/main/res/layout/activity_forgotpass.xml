<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img_bg"
            android:foreground="@drawable/btn_bg_design"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/raucu" />


        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/lobster"
            android:gravity="center"
            android:text="Welcome to my food app"
            android:textColor="@color/white"
            android:textSize="36dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hello"
            android:text="Quên mật khẩu"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="200dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu mới!"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="270dp"
            />

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/icon_pass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_pass"
                android:layout_toLeftOf="@+id/txtPass"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/txtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="17dp"


                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/icon_repass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_pass"
                android:layout_toLeftOf="@+id/txtRePass"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/txtRePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Re Password"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                />
        </FrameLayout>


        <Button
            android:id="@+id/btn_Login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="580dp"
            android:backgroundTint="@color/camdonau"
            android:padding="10dp"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textSize="20dp" />

    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
