<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3EDC8"
    android:layout_gravity="center_horizontal"
    >

    <!-- EMAIL -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="200dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="@color/black"
        android:inputType="textEmailAddress" />

    <!-- PASSWORD -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textSize="30dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="@color/black"
        android:inputType="numberPassword" />

    <!-- BUTTON forgotpassword -->
    <Button
        android:id="@+id/btn_forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORGOT PASS"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="#7D0A0A"
        android:layout_marginLeft="10dp"
        />
    <!-- Button Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- BUTTON signup -->


        <!--aglinTop: dam bao rang hai button duoc can doc voi nhau-->
        <Button
            android:id="@+id/btn_signup"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#7D0A0A"
            />
        <!-- BUTTON signin -->
        <Button
            android:id="@+id/btn_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btn_signup"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/btn_signup"
            android:backgroundTint="#7D0A0A"
            android:text="SIGN IN" />


    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>