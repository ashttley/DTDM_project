<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/btn_bg_design"
            android:scaleType="centerCrop"
            android:src="@drawable/raucu" />



        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/lobster"
            android:gravity="center"
            android:text="Welcome to my food app"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hello"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="200dp"/>

        <!--USERNAME-->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/frEmail"
            >

            <ImageView
                android:id="@+id/icon_email"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_email"
                android:layout_toLeftOf="@+id/txtUsername"
                android:layout_marginTop="15dp" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="Email"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </FrameLayout>

        <!--PASSWORD-->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:layout_gravity="center_horizontal"

            >

            <ImageView
                android:id="@+id/icon_pass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_pass"
                android:layout_toLeftOf="@+id/txtUsername"
                android:layout_marginTop="15dp" />

            <EditText
                android:id="@+id/txtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_marginTop="450dp"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_marginTop="15dp"
               />

            <ToggleButton
                android:id="@+id/passwordToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="90dp"
                android:backgroundTint="@color/camdonau"
                android:textColor="@color/white"
                android:textOff="OFF"
                android:textOn="ON" />

        </LinearLayout>



        <Button
            android:id="@+id/btn_Login"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="580dp"
            android:padding="10dp"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:backgroundTint="@color/camdonau" />


    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>