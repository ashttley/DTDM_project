<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img_bg"
            android:foreground="@drawable/btn_bg_design"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/raucu" />
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/lobster"
            android:gravity="center"
            android:text="Welcome to my food app"
            android:textColor="@color/white"
            android:textSize="36dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hello"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="200dp"/>
<!--USERNAME-->
        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="30dp"

            >

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_email"
            android:layout_toLeftOf="@+id/txtUsername"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            />
        </FrameLayout>


<!--PASSWORD-->

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="365dp"
            android:layout_marginLeft="30dp"
            >

            <ImageView
                android:id="@+id/icon_pass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_pass"
                android:layout_toLeftOf="@+id/txtPass"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/txtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                />
        </FrameLayout>



        <!--RE PASSWORD-->
        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="30dp"
            >

            <ImageView
                android:id="@+id/icon_repass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toLeftOf="@+id/txtRePass"
                android:layout_marginTop="25dp" />

            <EditText
                android:id="@+id/txtRePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                />
        </FrameLayout>

    <Button
            android:id="@+id/btn_Res"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="580dp"
            android:padding="10dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:backgroundTint="@color/camNen"/>

    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
