<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img_bg"
            android:foreground="@drawable/btn_bg_design"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/raucu" />
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/lobster"
            android:gravity="center"
            android:text="Welcome to my food app"
            android:textColor="@color/white"
            android:textSize="36dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hello"
            android:text="Đăng ký"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="200dp"/>
<!--Username-->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            >

            <ImageView
                android:id="@+id/icon_user"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_user"
                android:layout_toLeftOf="@+id/txtUsername"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                />
        </FrameLayout>
<!--Phone-->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="305dp"
            >

            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_phone"
                android:layout_toLeftOf="@+id/txtPhone"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                />
        </FrameLayout>
<!--Email-->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="355dp"
            >

        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_email"
            android:layout_toLeftOf="@+id/txtUsername"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:textSize="17dp"
            />
        </FrameLayout>


<!--PASSWORD-->

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400dp"
            >

            <ImageView
                android:id="@+id/icon_pass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_pass"
                android:layout_toLeftOf="@+id/txtPass"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/txtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                />

        </FrameLayout>



        <!--RE PASSWORD-->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/icon_repass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toLeftOf="@+id/txtRePass"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_pass"/>

            <EditText
                android:id="@+id/txtRePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_marginTop="495dp"
            android:layout_gravity="center_horizontal"
            >
            <ToggleButton
                android:id="@+id/passwordToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:backgroundTint="@color/camdonau"
                android:textColor="@color/white"
                android:textOff="OFF"
                android:textOn="ON" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_Res"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="580dp"
            android:backgroundTint="@color/camdonau"
            android:padding="10dp"
            android:text="Đăng ký"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="650dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản?"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="italic"

                />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Đăng nhập"
                android:textColor="@color/camdonau"
                android:textSize="17dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
